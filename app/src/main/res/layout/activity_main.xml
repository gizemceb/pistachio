<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="#FFEEAD">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="Merhaba!"
                android:textColor="@color/black"
                android:fontFamily="@font/segoe_ui_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Fıstık resimlerini yükle sana kalitelerini söyleyelim!"
                android:textColor="@color/black"
                android:fontFamily="@font/segoe_ui_bold_italic"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:elevation="36dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/card_background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:textSize="16dp"
            android:text="Tek yapman gereken fıstık resimlerini uygulamaya yüklemek, sana en kısa sürede kalitelerini hesaplayıp vereceğiz. Resimlerini yükleyerek başlayabilirsin..."
            android:textColor="@color/black"
            android:fontFamily="@font/segoe_ui"
            />

        <LinearLayout
            android:layout_width="234dp"
            android:layout_height="300dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="48dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageV"
                android:layout_width="match_parent"
                android:layout_height="164dp"
                app:srcCompat="@drawable/pistachio_6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="41dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/gallery_18" />

                <Button
                    android:id="@+id/load_pic"
                    android:layout_width="193dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:text="Galeriden Yükle"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="41dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/camera_18" />

                <Button
                    android:id="@+id/take_pic"
                    android:layout_width="193dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:text="Resim Çek"
                    android:textSize="14dp" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>